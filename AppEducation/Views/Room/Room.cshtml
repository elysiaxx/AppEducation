
@{
    ViewBag.Title = "Room";
    Layout = "_LayoutRoom";
}
@model Classes
@section Head {
    <link rel="stylesheet" href="~/pages/profile/css/all.min.css">
    <link rel="stylesheet" href="~/pages/profile/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="~/pages/create/css/create.css" />
    <link type="text/css" rel="stylesheet" href="~/pages/create/css/mdb.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <link rel="stylesheet" href="~/pages/room/css/room.css" />
}
<div style="display: flex; flex: 1 1 0%; height: calc(100vh - 63px);">
    <div style="width: 100%; display: flex; flex-wrap: wrap; box-sizing: border-box;">
        <div class="col-xs-2 navLeft">
            <div class="ps" style="padding: 0px 16px; position: sticky; top: 63px; height: calc(100vh - 63px);">
                    <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                        <div class="navLeftTop">
                            <div style="display:flex;justify-content:center">
                                <span> @Model.ClassName </span>/
                                <span> @Model.ClassID</span>
                            </div>
                            <div style="display:flex;justify-content:space-between;">
                                <button class="myBtnCustom" title="setting class"><i class="fas fa-cog"></i></button>
                                <button class="myBtnCustom" title="share"><i class="fas fa-share"></i></button>
                            </div>
                        </div>
                        <hr class="divider" />
                        <div class="sb-sidenav-menu">
                            <ul class="myListLink" style="display:flex;flex-direction:column;margin: 0;padding: 0;position: relative;list-style: none;">
                                <li class="myListLinkItem">
                                    @Html.ActionLink("NewsFeed", "Room", "Room", Model, new Dictionary<string, object> { { "class", "myNavLink" }, { "data-icon", "news" } })
                                </li>
                                <li class="myListLinkItem">
                                    @Html.ActionLink("Member", "Member", "Room", Model, new Dictionary<string, object> { { "class", "myNavLink" }, { "data-icon", "person" } })
                                </li>
                                <li class="myListLinkItem">
                                    @Html.ActionLink("Exercise", "Exercise", "Room", Model, new Dictionary<string, object> { { "class", "myNavLink" }, { "data-icon", "notebook" } })
                                </li>
                                <li class="myListLinkItem">
                                    @Html.ActionLink("Document", "Document", "Room", Model, new Dictionary<string, object> { { "class", "myNavLink" }, { "data-icon", "document" } })
                                </li>
                                <li class="myListLinkItem">
                                    @Html.ActionLink("Start Online", "Present", "Room", Model, new Dictionary<string, object> { { "class", "myNavLink" }, { "data-icon", "computer" } })
                                </li>
                            </ul>
                        </div>
                    </nav>
            </div>
        </div>
        <div class="col-xs-7 mainContent" style="padding:0;background-color:gainsboro;">
            <div style="margin: auto;">
                <div class="d-flex" style="flex-direction:column;padding:0;">
                    <div class="myHeaderContent">
                        <p style="margin:0;">Bảng tin</p>
                    </div>
                    <div class="df fdc" style="margin: auto; max-width: 620px;">
                        <div class="fnf" style="margin-top: 16px;">
                            <div class="df w-100" style="max-height: 82.5px; padding: 16px;">
                                <div class="myAvatarBox" style="background-color: rgb(111, 207, 151); border: 1px solid rgba(0, 0, 0, 0.1);">
                                    <p class="mAvt" style="margin:0;">K</p>
                                </div>
                                <div class="mFctrl mw jcc">
                                    <div class="mInputBase">
                                        <input type="text" placeholder="Enter notification to discuss" class="mw mInputCustom" style="height:24px;" />
                                    </div>
                                </div>
                            </div>
                            <div class="df jcfe aic" style="margin-top: 8px; padding: 16px; border-top: 1px solid rgba(0, 0, 0, 0.1);">
                                <label style="margin:0;">
                                    <div class="df aic cp" style="padding: 8px 16px; border-right: 1px solid rgba(0, 0, 0, 0.1);">
                                        <button class="myBtnCustom2" style="border:0;color: #1e88e5;background-color:white;">
                                            <i class="fas fa-image" style="fill: currentColor;width: 1em;height: 1em;display: inline-block;font-size: 1.5rem;
                                            transition: fill 200ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
                                            flex-shrink: 0;
                                            user-select: none;"></i>
                                            <span>Thêm hình</span>
                                        </button>
                                    </div>
                                </label>
                                <button class="myBtnCustom3" style="margin-left: 16px; width: 128px; height: 36px;">
                                    <span>Đăng tin</span>
                                </button>
                            </div>
                        </div>
                        <div style="padding: 32px; background: rgb(255, 255, 255); margin-top: 16px; border-radius: 8px;">
                            <div style="width:100%;height:350px;">

                            </div>
                            <p>NewsFeed</p>
                            <p>Nơi trao đổi các vấn đề trong lớp học dành cho giáo viên học sinh</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-3 rightContent" style="padding:0;">
            <div class="ps" style="height:100%;min-height: calc(100vh - 63px); max-height: calc(100vh - 63px); border-left: 1px solid rgb(216, 220, 240); padding: 16px; background: white; position: sticky; top: 63px;">
                <div>
                    <p>Thông báo</p>
                    <button>Tạo Thông báo</button>
                </div>
                <div>
                    <div></div>
                    <div>
                        <p>Lớp học chưa có thông báo nào
                        </p>
                        <p>Nội dung thông báo sẽ xuât hiện ở đây</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/js/Jquery3.4.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
<script src="~/bootstrap/js/bootstrap.min.js"></script>
<script type="text/javascript" src="~/pages/create/mdb.js"></script>
