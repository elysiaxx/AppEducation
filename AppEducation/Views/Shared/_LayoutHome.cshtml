
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/pages/home/img/favicon.png">
    <!-- bootstrap v3.3.6 css -->
    <link rel="stylesheet" href="~/pages/home/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/pages/Home/css/bootstrap.css">
    <!-- animate css -->
    <link rel="stylesheet" href="~/pages/home/css/animate.css">
    <link rel="stylesheet" href="~/pages/home/css/linearicons.css">
    <!-- meanmenu css -->
    <link rel="stylesheet" href="~/pages/home/css/meanmenu.min.css">
    <!-- owl.carousel css -->
    <link rel="stylesheet" href="~/pages/home/css/owl.carousel.css">
    <!-- font-awesome css -->
    <link rel="stylesheet" href="~/pages/home/css/font-awesome.min.css">
    <!-- style css -->
    <link rel="stylesheet" href="~/pages/home/css/style.css">
    <!-- responsive css -->
    <link rel="stylesheet" href="~/pages/home/css/responsive.css">
    @RenderSection("Head", required: false)

</head>
<body>
    <header>
        <div class="header-top-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="account-area text-right">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span>@User.Identity.Name</span>
                                <ul>
                                    <li><a asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a></li>
                                    <li><a asp-area="" asp-controller="Account" asp-action="Logout">Đăng Xuất</a></li>
                                </ul>
                            }
                            @if(!User.Identity.IsAuthenticated) {
                            <ul>
                                <li><a asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a></li>
                                <li><a asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a></li>
                            </ul>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- header-top-area-end -->
        <!-- header-mid-area-start -->
        <div class="header-mid-area ptb-40">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-5 col-xs-12">
                        <div class="header-search">
                            <form action="#">
                                <input type="text" placeholder="Search entire store here..." />
                                <a href="#"><i class="fa fa-search"></i></a>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-4 col-xs-12">
                        <div class="logo-area text-center logo-xs-mrg">
                            <a href="index.html"><img src="~/pages/login/img/logo.png" alt="logo" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- header-mid-area-end -->
        <!-- main-menu-area-start -->
        <div class="main-menu-area hidden-sm hidden-xs sticky-header-1" id="header-sticky">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center" style="margin-left: 300px;">
                            <div class="menu-area">
                                <div class="safe-area">
                                    <a asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                                </div>
                                <div class="safe-area">
                                    <a asp-area="" asp-controller="Account" asp-action="Register">Đăng Kí</a>
                                </div>
                                <div class="safe-area">
                                    <a asp-area="" asp-controller="Account" asp-action="Login">Đăng Nhập</a>
                                </div>
                                <div class="safe-area">
                                    <a href="#">Liên Hệ</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- main-menu-area-end -->
        <!-- mobile-menu-area-start -->
        <div class="mobile-menu-area hidden-md hidden-lg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="mobile-menu">
                            <nav id="mobile-menu-active">
                                <ul id="nav">
                                    <li class=""> <a asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a> </li>
                                    <li><a asp-area="" asp-controller="Account" asp-action="Register">Đăng Kí</a>li>
                                    <li><a asp-area="" asp-controller="Account" asp-action="Login">Đăng Nhập</a></li>
                                    <li><a href="#">Liên Hệ</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- mobile-menu-area-end -->
    </header>

    @RenderSection("Login", required: false)

    @RenderBody()

    <footer>
        <div class="footer-mid ptb-50">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-12">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="single-footer br-2 xs-mb">
                                    <div class="footer-title mb-20">
                                        <h3>Chương Trình</h3>
                                    </div>
                                    <div class="footer-mid-menu">
                                        <ul>
                                            <li><a href="contact.html">Quy Định</a></li>
                                            <li><a href="#">Chính Sách Dịch Vụ</a></li>
                                            <li><a href="#">Chính Sách Bảo Mật</a></li>
                                            <li><a href="register.html">Kiểm Tra Trình Độ </a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="single-footer br-2 xs-mb">
                                    <div class="footer-title mb-20">
                                        <h3>Tài Nguyên Miễn Phí</h3>
                                    </div>
                                    <div class="footer-mid-menu">
                                        <ul>
                                            <li><a href="contact.html">Tài liệu</a></li>
                                            <li><a href="#">Blog</a></li>
                                            <li><a href="#"> Bài test</a></li>
                                            <li><a href="#">Nhận học miễn phí qua gmail</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="single-footer mrg-sm">
                            <div class="footer-title mb-20">
                                <h3>Liên Hệ</h3>
                            </div>
                            <div class="footer-contact">
                                <p class="adress">
                                    <span>Địa Chỉ</span>
                                    236 Hoàng Quốc Việt
                                </p>
                                <p><span>Số Điện Thoại:</span> (+84)0123456789</p>
                                <p><span>Gmail:</span>  Education@gmail.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                <div class="row bt-2">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="link-follow">
                            <ul>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-youtube"></i></a></li>
                                <li><a href="#"><i class="fa fa-flickr"></i></a></li>
                                <li class="hidden-sm"><a href="#"><i class="fa fa-vimeo"></i></a></li>
                                <li class="hidden-sm"><a href="#"><i class="fa fa-instagram"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End footer Area -->
    </footer>
    @RenderSection("Script", required: false)
    <script src="~/pages/home/js/vendor/jquery-1.12.0.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/pages/home/js/bootstrap.min.js"></script>
    <!-- owl.carousel js -->
    <script src="~/pages/home/js/owl.carousel.min.js"></script>
    <!-- meanmenu js -->
    <script src="~/pages/home/js/jquery.meanmenu.js"></script>
    <!-- wow js -->
    <script src="~/pages/home/js/wow.min.js"></script>
    <!-- jquery.parallax-1.1.3.js -->
    <script src="~/pages/home/js/jquery.parallax-1.1.3.js"></script>
    <!-- jquery.countdown.min.js -->
    <script src="~/pages/home/js/jquery.countdown.min.js"></script>
    <!-- jquery.flexslider.js -->
    <script src="~/pages/home/js/jquery.flexslider.js"></script>
    <!-- jquery.counterup.min.js -->
    <script src="~/pages/home/js/jquery.counterup.min.js"></script>
    <!-- waypoints.min.js -->
    <script src="~/pages/home/js/waypoints.min.js"></script>
    <!-- plugins js -->
    <script src="~/pages/home/js/plugins.js"></script>
    <!-- main js -->
    <script src="~/pages/home/js/main.js"></script>
    <script src="~/pages/home/js/vendor/modernizr-2.8.3.min.js"></script>
</body>
</html>
