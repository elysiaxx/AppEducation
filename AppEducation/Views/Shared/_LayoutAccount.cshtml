                        </a>
                        <a class="btn btn-youtube btn-social mr-4" href="https://www.youtube.com" target="_blank">
                            <i style="color: crimson;" class="fa fa-youtube"></i>
                        </a>
                    </div>
                </div>
            </div>
    </footer> *@


    @RenderSection("Script", required: false)
    <script>
        document.getElementById("username").innerHTML = "@User.Identity.Name";
    </script>
    <script src="~/pages/profile/js/profile.js"></script>
    <script src="~/pages/profile/js/1209952130-idpiframe.js" async=""></script>
    <script src="~/pages/profile/js/analytics.js" async=""></script>
    <script src="~/pages/profile/js/bootstrap.min.js" async=""></script>
    <script src="~/pages/profile/js/index.101202010.js" async=""></script>
    <script src="~/pages/profile/js/jquery.min.js" async=""></script>
    <script src="~/pages/profile/js/main.chunkhash.101202010.bundle.js" async=""></script>
    <script src="~/pages/profile/js/OneSignalPageSDKES6.js" async=""></script>
    <script src="~/pages/profile/js/OneSignalSDK.js" async=""></script>
    <script src="~/pages/profile/js/main_vendor.chunkhash.101202010.bundle.js"></script>
    <script src="~/pages/profile/js/jquery.3.4.1.js"></script>
</body>

</html>
