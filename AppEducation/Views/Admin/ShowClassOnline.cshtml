
@{
    ViewData["Title"] = "ShowClassOnline";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<ClassInfo>
<div class="card mb-4">    
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Order Number</th>
                        <th>Topic</th>
                        <th>ClassName</th>
                        <th>TeacherId</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td> No class registered </td>
                        </tr>
                    }
                    else
                    {
                        var i = 0;
                        foreach (ClassInfo _class in Model)
                        {
                            <tr>
                                <td data-label="Order Number">@i</td>
                                <td data-label="ID">@_class.Topic</td>
                                <td data-label="UserName">@_class.ClassName</td>
                                <td data-label="Email" style="text-align: left;">@_class.TeacherId</td>
                                <td data-label="Modify"></td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Order Number</th>
                        <th>Topic</th>
                        <th>ClassName</th>
                        <th>TeacherId</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

