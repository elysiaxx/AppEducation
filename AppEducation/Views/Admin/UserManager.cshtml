
@{
    ViewData["Title"] = "UserManager";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<AppUser>
<div class="card mb-4">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <a class="btn btn-success" asp-action="Create" asp-controller="Admin">Tạo mới</a>
            </div>          
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Order Number</th>
                        <th>User Name</th>
                        <th style="text-align: left;">Email</th>
                        <th>Modify</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td> No user registered </td>
                        </tr>
                    }
                    else
                    {
                        var i = 0;
                        foreach (AppUser user in Model)
                        {
                            <tr>
                                <td data-label="Order Number">@i</td>
                                
                                <td data-label="UserName">@user.UserName</td>
                                <td data-label="Email" style="text-align: left;">@user.Email</td>
                                <td data-label="Modify">
                                    @Html.ActionLink("Edit", "EditProfile", "Admin", new { id = user.Id }) |
                                    @Html.ActionLink("Details", "Details", "Admin", new { id = user.Id }) 
                                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
                
            </table>
        </div>
    </div>
</div>


